{
  "name": "@hatago/adapter-node",
  "version": "0.3.1",
  "type": "module",
  "description": "Hatago Node.js adapter",
  "license": "MIT",
  "author": "Hatago Contributors",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/himorishige/hatago.git",
    "directory": "packages/adapter-node"
  },
  "keywords": [
    "hatago",
    "mcp",
    "nodejs",
    "adapter"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "hatago-node": "./dist/server.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsx src/server.ts",
    "dev:stdio": "tsx src/stdio.ts",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "start": "node --enable-source-maps dist/server.js",
    "start:stdio": "node --enable-source-maps dist/stdio.js",
    "clean": "rm -rf dist",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "pnpm -w run format",
    "format:fix": "pnpm -w run format:fix"
  },
  "peerDependencies": {
    "hono": ">=4.0.0",
    "@modelcontextprotocol/sdk": "^1.17.2"
  },
  "dependencies": {
    "@hatago/core": "^0.3.1",
    "@hono/node-server": "^1.18.2",
    "@hatago/hono-mcp": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "hono": "^4.9.1",
    "@modelcontextprotocol/sdk": "^1.17.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^2.1.8"
  }
}
