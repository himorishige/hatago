{
  "name": "@hatago/adapter-workers",
  "version": "0.1.0",
  "type": "module",
  "description": "Hatago Cloudflare Workers adapter",
  "main": "./dist/worker.js",
  "types": "./dist/worker.d.ts",
  "exports": {
    ".": {
      "import": "./dist/worker.js",
      "types": "./dist/worker.d.ts"
    }
  },
  "files": ["dist", "wrangler.toml"],
  "scripts": {
    "dev": "wrangler dev src/worker.ts",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "deploy": "pnpm build && wrangler deploy",
    "clean": "rm -rf dist",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format src",
    "format:fix": "biome format --write src"
  },
  "dependencies": {
    "@hatago/core": "workspace:*",
    "@hono/mcp": "file:../../docs/dist"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241224.0",
    "@types/node": "^20.19.10",
    "typescript": "^5.9.2",
    "wrangler": "^3.114.13"
  },
  "engines": {
    "node": ">=18"
  }
}
