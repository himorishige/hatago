{
  "name": "@hatago/plugin-logger",
  "version": "0.2.0",
  "type": "module",
  "description": "Structured logging plugin for Hatago",
  "license": "MIT",
  "author": "Hatago Contributors",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/himorishige/hatago.git",
    "directory": "packages/plugin-logger"
  },
  "keywords": [
    "hatago",
    "mcp",
    "plugin",
    "logging",
    "structured"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "hatago.plugin.json",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "pnpm -w run format",
    "format:fix": "pnpm -w run format:fix"
  },
  "peerDependencies": {
    "@hatago/core": ">=0.2.0"
  },
  "dependencies": {
    "@hatago/core": "^0.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18"
  }
}
