{
  "name": "@hatago/plugin-rate-limit",
  "version": "0.1.0",
  "type": "module",
  "description": "Rate limiting plugin for Hatago using token bucket algorithm",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "hatago.plugin.json"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "pnpm -w run format",
    "format:fix": "pnpm -w run format:fix"
  },
  "dependencies": {
    "@hatago/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18"
  }
}
