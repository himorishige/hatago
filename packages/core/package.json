{
  "name": "@hatago/core",
  "version": "0.1.1",
  "type": "module",
  "description": "Hatago core: runtime-agnostic MCP server with plugin architecture",
  "license": "MIT",
  "author": "Hatago Contributors",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/himorishige/hatago.git",
    "directory": "packages/core"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "plugin",
    "framework"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./transport": {
      "import": "./dist/transport/index.js",
      "types": "./dist/transport/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "prettier -c src",
    "format:fix": "prettier -w src"
  },
  "peerDependencies": {
    "hono": ">=4.0.0",
    "@modelcontextprotocol/sdk": "^1.17.2"
  },
  "dependencies": {
    "zod": "^3.25.76",
    "@himorishige/noren-core": "^0.6.2",
    "@himorishige/noren-plugin-security": "^0.6.2",
    "@hatago/mcp-transport-internal": "file:../hono-mcp"
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "hono": "^4.9.1",
    "@modelcontextprotocol/sdk": "^1.17.2",
    "msw": "^2.7.0",
    "typescript": "^5.9.2",
    "vitest": "^2.1.8"
  }
}
