{
  "name": "@hatago/monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Hatago: lightweight, fast, simple remote MCP server with plugin architecture",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm -C packages/adapter-node dev",
    "dev:cf": "pnpm -C packages/adapter-workers dev",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "clean": "pnpm -r clean",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "prettier -c .",
    "format:fix": "prettier -w .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "changeset": "changeset",
    "changeset:version": "changeset version && pnpm install --lockfile-only",
    "changeset:publish": "pnpm build && changeset publish",
    "version": "changeset version && pnpm install --lockfile-only",
    "release": "pnpm build && changeset publish"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "examples/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.5",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "c8": "^10.1.3",
    "msw": "^2.7.0",
    "prettier": "^3.3.3",
    "typescript": "^5.9.2",
    "vitest": "^2.1.8"
  }
}
