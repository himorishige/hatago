{
  "name": "@hatago/reference-server",
  "version": "0.3.1",
  "private": true,
  "type": "module",
  "description": "Hatago reference implementation server",
  "scripts": {
    "dev": "tsx src/dev-node.ts",
    "dev:stdio": "tsx src/stdio-server.ts",
    "dev:cf": "wrangler dev src/worker.ts",
    "build": "tsc -p tsconfig.json",
    "build:stdio": "tsc src/stdio-server.ts --outDir dist --module ESNext --moduleResolution node --target ES2022",
    "typecheck": "tsc --noEmit",
    "start": "node --enable-source-maps dist/dev-node.js",
    "start:stdio": "node --enable-source-maps dist/stdio-server.js",
    "deploy:dev": "pnpm build && wrangler deploy --env development",
    "deploy:staging": "pnpm build && wrangler deploy --env staging",
    "deploy:prod": "pnpm build && wrangler deploy --env production",
    "verify:deployment": "tsx scripts/verify-deployment.ts"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@hatago/adapter-node": "workspace:*",
    "@hatago/core": "workspace:*",
    "@hatago/plugin-chatgpt-connector": "workspace:*",
    "@hatago/plugin-github-oauth": "workspace:*",
    "@hatago/plugin-hello-hatago": "workspace:*",
    "@hatago/plugin-oauth-metadata": "workspace:*",
    "@himorishige/noren-core": "^0.6.2",
    "@himorishige/noren-plugin-security": "^0.6.2",
    "@modelcontextprotocol/sdk": "^1.17.3",
    "dotenv": "^16.4.7",
    "hono": "^4.9.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "cosmiconfig": "^9.0.0",
    "cosmiconfig-typescript-loader": "^6.1.0",
    "toml": "^3.0.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "wrangler": "^4.30.0",
    "yaml": "^2.8.1"
  }
}
